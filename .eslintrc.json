{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended", 
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": ["prettier", "simple-import-sort"],
    "ignorePatterns": "build",
    "rules": {
        "prettier/prettier": "error"
    },
    "parser": "babel-eslint"
}
